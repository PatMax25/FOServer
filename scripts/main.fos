string propermoney(Critter& cr)
{
	if(!valid(cr))
		return "";
	switch(cr.Param[ST_DESCRIPTION2])
	{
	case 1: return "Dollars";
	case 2: return "Chips";
	case 3: return "Scrips";
	case 4: return "Pounds";
	case 5: return "Rings";
	default: return "Caps";
	}
	return "caps";
}
string properprefix(Critter& cr)
{
	if(!valid(cr))
