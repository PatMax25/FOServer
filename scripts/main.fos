	else
	{
		cr.Say(SAY_NETMSG, "Can't find player " + GetSafePlayerName(critId) + " <" + critId + ">!");
	//	Log("ERR: Can't find player " + GetSafePlayerName(critId) + " <" + critId + ">!");
	}
