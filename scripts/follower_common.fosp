	script="follower@critter_init";
	
	critter.FollowerVarBase[(933)]=owner.Id;
	critter.FollowerVarBase[(932)]=type;
	critter.ParamBase[(84)]=(-2);
	
	critter.ParamBase[(103)]=owner.Id;
	
	if(type==(1))
	{
		string crName=GetStoredName(critter);
		SetLexem(critter,"$name",crName);
	}
	
	ClearEvents(critter);
	DropDeleteEvent(critter);
	
	critter.SetBagRefreshTime((uint(-1)));
	critter.SetScript(script);
	critter.FollowerVarBase[(938)]=critter.Param[(104)];
	critter.ParamBase[(104)]=dialogid;
	SetGroupIndex(critter,GetGroupIndex(owner));
	(critter.ParamBase[(534)]=(critter.Param[(534)]|((0x00000200)))^((0x00000200)));
	critter.ParamBase[(512)]=0;
	if(owner.Param[(335)]!=0)
	((critter.FollowerVarBase[(941)])=(critter.FollowerVarBase[(941)])|((0x1)));
	
	bool assigned=AddToFollowerlist(owner,critter);
	if(!assigned)
	Log("Failed to assign NPC's id to master("+owner.Id+") followerlist");
	
	critter.RefreshVisible();
	
	return true;
} 

