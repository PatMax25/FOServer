	if(!(@map!=null))
	return-1;
	int followersn=0;
	array<Critter@>crits;
	uint n=map.GetCritters(0,(0x0F)|(0x20),crits);
	for(uint i=0;i<n;i++)
	{
		if(IsOwnersFollower(player,crits[i]))
