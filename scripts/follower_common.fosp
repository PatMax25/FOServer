int GetFollowers(Critter&player,bool all,array<Critter@>&followers)
{
	for(uint i=(900);i<=(924);i++)
	{
		if(player.Followers[i]!=0)
		{
			Critter@cr=GetCritter(player.Followers[i]);
			if(!(@cr!=null))
