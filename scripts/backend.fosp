void LogAttack(Map@map,Critter&cr,Critter&target,ProtoItem&weapon,ProtoItem@ammo,uint8 aim,bool isBurst,uint ammoRound,uint weaponRound,bool isHit,bool isCritical,uint critfailFlags)
{
	dbLog("log_attacks",((@map!=null)?map.GetLocation().GetProtoId():0)+"|"+((@map!=null)?map.Id:0)+"|"+cr.Id+"|"+target.Id+"|"+target.GetProtoId()+"|"+weapon.ProtoId+"|"+((@ammo!=null)?ammo.ProtoId:0)+"|"+aim+"|"+((@map!=null)?(map.IsTurnBased()?"1":"0"):"0")+"|"+(isBurst?"1":"0")+"|"+((((weaponRound)<(ammoRound))?(weaponRound):(ammoRound)))+"|"+(isHit?"1":"0")+"|"+(isCritical?"1":"0")+"|"+critfailFlags);
} 

