{
	dbLog("log_damages",((@map!=null)?map.GetLocation().GetProtoId():0)+"|"+((@map!=null)?map.Id:0)+"|"+((@attacker!=null)?attacker.Id:0)+"|"+target.Id+"|"+target.GetProtoId()+"|"+(target.IsDead()?"1":"0")+"|"+((@weapon!=null)?weapon.GetProtoId():0)+"|"+((@ammo!=null)?ammo.ProtoId:0)+"|"+aim+"|"+((@map!=null)?(map.IsTurnBased()?"1":"0"):"0")+"|"+(isBurst?"1":"0")+"|"+rounds+"|"+(isCritical?"1":"0")+"|"+damage+"|"+eff);
}

void LogGathering(Critter&cr,uint16 resource,int amount)
