void StartFirstTentQuest(Critter&player)
{
	GameVar@qFirstTent=GetLocalVar((7322),player.Id);
	if(qFirstTent>(0))
	{
		return;
	}
	
	uint16 worldX=0;
	uint16 worldY=0;
	if(player.WorldY<800)
	{
		worldX=Random(1300,1400);
		worldY=Random(250,350);
	}
	else if(player.WorldY>1700)
	{
		worldX=Random(1600,1700);
		worldY=Random(2050,2150);
	}
	else
	{
		worldX=Random(1650,1750);
		worldY=Random(1250,1350);
	}
	
	array<Critter@>critters={player};
	uint locId=CreateLocation((84),worldX,worldY,critters);
	SetRootMapData(GetLocation(locId),(5),player.Id);
	if(player.Param[(516)]==(2))
	{
		SetTurnBasedAvailability(GetLocation(locId));
	}
	
	Location@location=GetLocation(locId);
	location.Color=((uint(((120)<<24)|(((255)&0xFF)<<16)|(((128)&0xFF)<<8)|((0)&0xFF))));
	location.Update();
	
	GameVar@qFirstTentLoc1Id=GetLocalVar((7323),player.Id);
	qFirstTentLoc1Id=locId;  
	
	qFirstTent=(1);
	
	SetQuestGarbager(0,player.Id,locId,(7322),(5));
}  

void r_SpawnFarmhouse(Critter&player,Critter@npc)
{
	Location@familyTent=npc.GetMap().GetLocation();
	
	uint16 farmX=familyTent.WorldX-Random(150,200);
	uint16 farmY=familyTent.WorldY-50+Random(0,100);
	
	array<Critter@>critters={player};
	uint locId=CreateLocation((86),farmX,farmY,critters);
	SetRootMapData(GetLocation(locId),(5),player.Id);
	if(player.Param[(516)]==(2))
	{
		SetTurnBasedAvailability(GetLocation(locId));
	}
	
	Location@location=GetLocation(locId);
	location.Color=((uint(((120)<<24)|(((255)&0xFF)<<16)|(((128)&0xFF)<<8)|((0)&0xFF))));
	location.Update(); 
	
	GameVar@qFirstTentLoc2Id=GetLocalVar((7324),player.Id);
	qFirstTentLoc2Id=locId;
	
	GameVar@qFirstTent=GetLocalVar((7322),player.Id);
	qFirstTent=(2);
	
	SetQuestGarbager(0,player.Id,familyTent.Id,(7323),0);
	SetQuestGarbager(0,player.Id,locId,(7324),0);
}   

void r_FamilyLeave(Critter&player,Critter@npc)
{
	Map@familyTent=npc.GetMap();
	Map@emptyFamilyTent=familyTent.GetLocation().GetMapByIndex(1);
	
	uint ownerId=GetRootMapData(familyTent.GetLocation(),(5));
	GameVar@qFirstTent=GetLocalVar((7322),ownerId);
	qFirstTent=(4);
	
	player.ParamBase[(76)]+=300*(GetGvar((62001)));
	
	familyTent.SetEvent((6),"_InTent");
	emptyFamilyTent.SetEvent((7),"_OutAbandonedTent");
	
	array<Critter@>critters;
	uint num=familyTent.GetCritters(0,(0x0F),critters);
	
	for(uint i=0;i<num;i++)
	{
		if((critters[i].IsNpc()&&!(((critters[i].Param[(534)]&((0x00000020)))!=0))))
		{
			DeleteNpc(critters[i]);
		}
		else
		{
			critters[i].TransitToMap(emptyFamilyTent.Id,critters[i].HexX,critters[i].HexY,critters[i].Dir);
		}
	}
} 

void _InitAbandonedTent(Map&map,bool firstTime)
{
	Location@loc=map.GetLocation();
	uint ownerId=GetRootMapData(loc,(5));
	loc.GetMapByIndex(0).SetEvent((6),"_InTent");
	loc.GetMapByIndex(1).SetEvent((7),"_OutAbandonedTent");
} 

void _InTent(Map&map,Critter&cr)
{
	Location@loc=map.GetLocation();
	uint ownerId=GetRootMapData(loc,(5));
	if(ownerId==0)
	{
		return;
	}    
	
	GameVar@qFirstTent=GetLocalVar((7322),ownerId);
	if(qFirstTent>=(4))
	{
		if(!cr.TransitToMap(loc.GetMapByIndex(1).Id,cr.HexX,cr.HexY,cr.Dir))
		{
			cr.Say((11),"There is no space in this location.");
			cr.TransitToGlobal(false);
		}
	}
} 

void _OutAbandonedTent(Map&map,Critter&cr)
{
	Location@loc=map.GetLocation();
	
	if(loc.IsNotValid)
	{
		return;
	}
	
	uint ownerId=GetRootMapData(loc,(5));
	if(ownerId==0)
	{
		return;
	}
	
	GameVar@qFirstTent=GetLocalVar((7322),ownerId);
	if(qFirstTent>=(4))
	{
		if(!LocationHasCritters(loc,(0x0F)))
		{
			uint loc1Id=uint(GetLocalVar((7323),ownerId).GetValue());
			if(loc1Id>0)
			{
				DeleteLocation(loc1Id);
			}
			uint loc2Id=uint(GetLocalVar((7324),ownerId).GetValue());
			if(loc2Id>0)
			{
				DeleteLocation(loc2Id);
			}
		}
	}
}  

void _Rat(Critter&cr,bool firstTime)
{
	critter_init(cr,firstTime);
	cr.SetEvent((2),"_RatDead");
}

void _RatDead(Critter&cr,Critter@killer)
{
	Map@farmhouse=cr.GetMap();
	array<Critter@>rats;
	if(farmhouse.GetCritters((116),(0x20)|(0x03),rats)==0)
	{
		uint ownerId=GetRootMapData(farmhouse.GetLocation(),(5));
		if(ownerId==0)
		{
			return;
		}
		
		GameVar@qFirstTent=GetLocalVar((7322),ownerId);
		qFirstTent=(3);
	}
	
}
