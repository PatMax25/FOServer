void MobWaveBase(int base,int wave)
{
	Map@map=GetMapByPid(CarMaps[base],0);
	if(not(@map!=null))
	return;
	
	if(!ForceBaseCheck(base))
	return;
	
	GameVar@varController=GetGlobalVar(GvarController[base]);
