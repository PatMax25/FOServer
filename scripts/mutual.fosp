uint GetRealItemsWeight(Critter&critter)
{
	int val=0;
	array<Item@>items;
	critter.GetItems(-1,items);
	
	for(uint i=0,j=items.length();i<j;i++)
	{
		val+=((items[i].GetType()==(3))?((items[i].AmmoPid!=0?(items[i].Proto.Weight+(GetProtoItem(items[i].AmmoPid).Weight*items[i].AmmoCount)):items[i].Proto.Weight)):items[i].Proto.Weight)*items[i].GetCount();
	}
	return val;
}                              

