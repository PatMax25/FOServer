bool DoorIsBlocked(Item@door)
{
	if(!(@door!=null))
	return false;
	
	uint16 doorX=0;
	uint16 doorY=0;
	Map@doorMap=door.GetMapPosition(doorX,doorY);
	
	if(!(@doorMap!=null))
	return false;
	
	if(IsMultihex(door))
	{
		return IsMultihexBlocked(door);
	}
	else
	{
		if(!doorMap.IsHexPassed(doorX,doorY))
		return true;
	}
	return false;
}   

