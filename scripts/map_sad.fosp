	if(!item.Proto.Container_Changeble)
	return false;
	if(IsMultihex(item))
	MultihexClose(item);
	Map@map=GetMap(item.MapId);
	if(!(@map!=null))
	return true;
	string sound=item.GetType()==(9)?"SCDOORSA.ACM":"ICCNTNRA.ACM";
