bool AddAchievement(Critter&cr,uint8 achievement)
{  
	
	if((cr.GetAccess()>(0)&&achievement!=(254))||
	(cr.GetAccess()==(0)&&HaveAchievement(cr,(254))))
	return(false);                     
	
	return(false);
}

bool HaveAchievement(Critter&cr,uint8 achievement)
{
	if((((cr.Param[(580)+achievement/32])&(1<<(achievement%32)))!=0))
	return(true);
	
	return(false);
}                                                                                                                                                  

