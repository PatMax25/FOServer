bool IsQuestActive(Critter&player)
{
	GameVar@var=GetLocalVar((7122),player.Id);
	return var.GetValue()>0;
} 

bool IsFlag(Critter&player,uint flag){GameVar@var=GetLocalVar((7126),player.Id);return(var.GetValue()&flag)==flag;}
void SetFlag(Critter&player,uint flag){GameVar@var=GetLocalVar((7126),player.Id);var=var.GetValue()|flag;}
bool IsRepaired(Critter&player,int number){return IsFlag(player,(1<<(number)));}
bool IsOptimized(Critter&player,int number){return IsFlag(player,(8<<(number)));}
bool IsPowered(Critter&player,int number){return IsFlag(player,(64<<(number)));}
void SetRepaired(Critter&player,int number){SetFlag(player,(1<<(number)));}
void SetOptimized(Critter&player,int number){SetFlag(player,(8<<(number)));}
void SetPowered(Critter&player,int number){SetFlag(player,(64<<(number)));}
uint CountRepaired(Critter&player)
{
	uint ret=0;
	for(uint i=0;i<3;i++)
	if(IsRepaired(player,i))
	ret++;
	return ret;
}
uint CountOptimized(Critter&player)
{
	uint ret=0;
	for(uint i=0;i<3;i++)
	if(IsOptimized(player,i))
	ret++;
	return ret;
}
uint CountPowered(Critter&player)
{
	uint ret=0;
	for(uint i=0;i<3;i++)
	if(IsPowered(player,i))
	ret++;
	return ret;
}

string@[]Remaining={"","Two","One"};

void RepairGenerator(Critter&player,int number)
{
	SetRepaired(player,number);
	uint done=CountRepaired(player);
	if(done<3)
	player.Say((11),"You have repaired the generator number "+(number+1)+". "+Remaining[done]+" more to go.");
	else
	{
		
		player.ParamBase[(76)]+=50*(GetGvar((62001)));
		GameVar@var=GetLocalVar((7122),player.Id);
		var=2;
	}
}

void OptimizeGenerator(Critter&player,int number)
{
	SetOptimized(player,number);
	uint done=CountOptimized(player);
	if(done<3)
	player.Say((11),"You have optimized the generator number "+(number+1)+". "+Remaining[done]+" more to go.");
	else
	{
		
		player.ParamBase[(76)]+=100*(GetGvar((62001)));
		GameVar@var=GetLocalVar((7122),player.Id);
		var=3;
	}
}

void PowerGenerator(Critter&player,int number)
{
	SetPowered(player,number);
	uint done=CountPowered(player);
	if(done<3)
	player.Say((11),"You have powered up the generator number "+(number+1)+". "+Remaining[done]+" more to go.");
	else
	{
		
		player.ParamBase[(76)]+=100*(GetGvar((62001)));
		GameVar@var=GetLocalVar((7122),player.Id);
		var=4;
	}
}

bool s_Generator(Critter&player,Scenery&table,int skill,Item@item,int number)
{
	if(!IsQuestActive(player))
	return false;
	
	if(!IsRepaired(player,number))
	{
		if((@item!=null))
		{
			if(item.GetProtoId()==(1801))
			{
				do{if(item.GetCount()>(1)) item.SetCount(item.GetCount()-(1));else DeleteItem(item);}while(false);
				RepairGenerator(player,number);
				return true;
			}
		}
		if(skill!=(213))
		return false; 
		
		TrySetTimeout(player);
		
		if(SkillRoll(player,(213),-70))
		{
			RepairGenerator(player,number);
			return true;
		}
		player.Say((11),"You've failed to repair the generator.");
		return true;
	}
	
	if(!IsOptimized(player,number))
	{
		if(skill!=(212))
		return false;
		
		TrySetTimeout(player);
		if(SkillRoll(player,(212),-100))
		{
			OptimizeGenerator(player,number);
			return true;
		}
		player.Say((11),"You've failed to optimize the generator.");
		return true;
	}
	return false;
}

void Switch(Item&powerswitch,bool firstTime)
{
	powerswitch.AnimStayBegin=0;
	powerswitch.SetEvent((4),"_Switch");
}

bool _Switch(Item&powerswitch,Critter&player,int skill)
{
	player.Animate((1),(28),powerswitch,true,true);
	
	if(!IsQuestActive(player))
	return false;
	if(!IsOptimized(player,powerswitch.Val0))
	{
		player.Say((11),"Turning the switche before optimizing the generator will have no effect.");
		return true;
	}
	
	if(skill!=-1)
	return false;
	if(!IsPowered(player,powerswitch.Val0))
	{
		PowerGenerator(player,powerswitch.Val0);
		powerswitch.AnimStayBegin=1;
		CreateTimeEvent(((__FullSecond)+(((1)*__TimeMultiplier*60))),"e_PowerSwitch",powerswitch.Id,false);
		return true;
	}
	return false;
}

uint e_PowerSwitch(array<uint>@values)
{
	Item@powerswitch=GetItem(values[0]);
	if(!(@powerswitch!=null))
	return 0;
	
	powerswitch.AnimStayBegin=0;
	return 0;
}

void TrySetTimeout(Critter&player)
{
	GameVar@var=GetLocalVar((7200),player.Id);
	var=var+1;
	if(var.GetValue()==5)
	{
		player.TimeoutBase[(232)]=((__FullSecond)+(((30)*__TimeMultiplier*60)));
		var=0;
		player.Say((11),"The repairs made you tired.");
	}
}
