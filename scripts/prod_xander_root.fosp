void item_init(Item&item,bool firstTime)
{
	if(firstTime)
	item.Val0=(4);
	item.SetEvent((4),"_SkillPlantXander");
}

bool _SkillPlantXander(Item&item,Critter&cr,int skill)
{
	
	Map@map=cr.GetMap();
	if(!(@map!=null))
	return false;
	
	if(map.GetProtoId()==(9))
	{
		if(cr.Param[(510)]!=0&&(cr.IsPlayer()&&cr.GetAccess()==(0))){cr.ParamBase[(510)]=0;};
		
		item.Val0-=1;
		if(item.Val0<=0)
		{
			ShuffleItem(item);
		}
		
		cr.Say((11),"You have collected some Xander roots.");
		cr.AddItem((272),(1));
	}
	else
	{
		DeleteItem(item);
		cr.Say((11),"You have collected some Xander roots.");
		cr.AddItem((272),1);
	} 
	
	return true;
}                                   

