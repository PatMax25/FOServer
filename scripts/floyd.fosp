void critter_init(Critter&floyd,bool firstTime)
{
	floyd.SetEvent((0),"_Idle");
}

void _Idle(Critter&floyd)
{
	if(Random(0,2)==0)
	floyd.MoveRandom();
	if(Random(0,3)==0)
	floyd.SayMsg((2),(1),(1000000000+((1111))*100000+(1)));
	
	floyd.Wait(Random(500,20000));
}
