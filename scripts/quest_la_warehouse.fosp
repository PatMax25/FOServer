void SendPunksToSleep(Map&map)
{
	array<Entire>entires;
	if(ParseEntires(map,entires,(150))==0)
	return;
	array<Critter@>punks;
	for(uint i=0,j=GetPunks(map,punks);i<j;i++)
	punks[i].TransitToHex(entires[0].HexX,entires[0].HexY,0);
}

