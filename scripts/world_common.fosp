bool IsNight()
{
	return(((__Hour)>=22||(__Hour)<=6));
}

bool IsDay()
{
	return(!IsNight());
}

bool IsMorning()
{
	return(((__Hour)>=7&&(__Hour)<=11));
}

bool IsAfternoon()
{
	return(((__Hour)>=12&&(__Hour)<=17));
}

bool IsEvening()
{
	return(((__Hour)>=18&&(__Hour)<=21));
}

