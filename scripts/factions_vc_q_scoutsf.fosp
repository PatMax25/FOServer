void ScoutSFMap(Map@map,Critter@player)
{   
	
	GameVar@var=GetLocalVar((4202),player.Id); 
	
	if(var==1||var>9)
	{
		
		if(map.GetProtoId()==(137))
		{
			if(var==101||var==1)
			{
				var+=10;
			}
		}
		
		if(map.GetProtoId()==(139))
		{
			if(var<100)
			{
				var+=100;
			}
		}
	}
	else
	{  
		
	}  
	
}
